{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>ahdcreative/renovate-config"
  ],
  "ignorePresets": [
    "github>ahdcreative/renovate-config:schedule"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": false,
      "stabilityDays": 10
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "rangeStrategy": "widen",
      "stabilityDays": 10
    },
    {
      "vulnerabilityAlerts": {
        "labels": [
          "security"
        ],
        "automerge": true,
        "assignees": [
          "@ahdcreative/backend"
        ]
      }
    }
  ]
}
